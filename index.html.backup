    <section id="contact" class="section">
      <div class="container">
        <h2 class="section-title">Contact</h2>
        <div class="grid contact-grid">
          <div class="grid contact-cards">
            <div class="card"><i class="fa-solid fa-envelope"></i> <strong>Email</strong><br/><a href="mailto:iyanudiriwari@gmail.com">iyanudiriwari@gmail.com</a></div>
            <div class="card"><i class="fa-solid fa-phone"></i> <strong>Phone</strong><br/>+33 7 54 53 27 15</div>
            <div class="card"><i class="fa-solid fa-location-dot"></i> <strong>Location</strong><br/>Rouen, Normandie, France</div>
            <div class="card socials">
              <a class="btn" href="https://www.linkedin.com/in/pere-diriwari/" target="_blank" rel="noopener"><i class="fab fa-linkedin"></i> LinkedIn</a>
              <a class="btn" href="https://github.com/pdiriwari" target="_blank" rel="noopener"><i class="fab fa-github"></i> GitHub</a>
              <a class="btn" href="https://scholar.google.com/citations?user=tL7F4bUAAAAJ&hl=en" target="_blank" rel="noopener"><i class="fas fa-graduation-cap"></i> Scholar</a>
              <a class="btn" href="https://www.researchgate.net/profile/Peremobowei-Diriwari" target="_blank" rel="noopener"><i class="fab fa-researchgate"></i> ResearchGate</a>
            </div>
          </div>
          <form id="contact-form" class="card" autocomplete="off">
            <label>Name<input class="input" name="name" required/></label>
            <label>Email<input class="input" type="email" name="email" required/></label>
            <label>Subject<input class="input" name="subject"/></label>
            <label>Message<textarea class="input" rows="5" name="message" required></textarea></label>
            <button class="btn send"><i class="fa-regular fa-paper-plane"></i> Send</button>
